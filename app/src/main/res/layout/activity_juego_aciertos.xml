<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_juego_aciertos">

    <Button
        android:id="@+id/btn_verificar_act2"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/btn_verificar_act2" />

    <TextView
        android:id="@+id/tv_vacio_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="134dp"
        android:text="VACIO" />

    <TextView
        android:id="@+id/tv_vacio_capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_vacio_pais"
        android:layout_marginStart="13dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/btn_verificar_act2"
        android:text="VACIO" />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.adolfo.practica1tema4.Fragment1_actv2"
        android:layout_width="172dp"
        android:layout_height="241dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        tools:layout="@layout/fragment1_actv2" />

    <fragment
        android:id="@+id/fragment5"
        android:name="com.example.adolfo.practica1tema4.Fragment2_actv2"
        android:layout_width="172dp"
        android:layout_height="241dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        tools:layout="@layout/fragment2_actv2" />

    <ImageView
        android:id="@+id/imgv_verificar_act2"
        android:layout_width="139dp"
        android:layout_height="149dp"
        android:layout_alignBottom="@+id/tv_vacio_capital"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-46dp" />
</RelativeLayout>